{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "rootDir": ".",
  "roots": ["<rootDir>/libs/", "<rootDir>/apps/"],
  "testRegex": ".+(spec|e2e-spect).ts$",
  "passWithNoTests": true,
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@slibs/([^/]+)(|/.*)$": "<rootDir>/libs/$1/src/$2"
  }
}
